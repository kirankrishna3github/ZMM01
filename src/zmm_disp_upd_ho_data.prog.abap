        IT_FCAT  TYPE LVC_T_FCAT,                          "SLIS_T_FIELDCAT_ALV
        WA_FCAT  LIKE LINE OF IT_FCAT,

        WA_LAYOUT  TYPE LVC_S_LAYO.

DATA :  WA_CELLTAB  TYPE LVC_S_STYL,
        IT_CELLTAB    TYPE LVC_T_STYL.

DATA :  IT_MNAMES LIKE TABLE OF T247,
        WA_MNAMES LIKE T247.

DATA :  MONTH1  TYPE DATUM,
        MONTH2  TYPE DATUM,
        MONTH3  TYPE DATUM.

DATA : M1_NAME(10) TYPE C,
       M2_NAME(10) TYPE C,
       M3_NAME(10) TYPE C,

